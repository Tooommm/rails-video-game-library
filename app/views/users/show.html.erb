<div class="container">
  <div class="text-center">
    <h1>Welcome <%= @user.username %></h1>
  </div>
  <div class="row mb-5 mt-5">

    <%if @user.library.nil? %>
      <div class="row">
        <h3 class="text-center">no library yet create your own</h3>
        <%= link_to "New library", new_user_library_path(@user), class: "btn btn-primary btn-lg btn-block" %>
      </div>
      <% elsif library.photo.attached? %>
        <div class="col-xs-12 col-sm-4">
          <%= link_to libray_path(user), class: "card-link" do%>
          <div class="card m-4"  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
            <div class="card-category p-5">
              <h2> <%= library.name  %> </h2>
            </div>
          </div>
        </div>
          <% end %>
    <% end %>
  </div>
  <div class="row">
    <%= link_to "Delete my account", user_path(@user), class: "btn btn-danger btn-lg btn-block", method: :delete%>
  </div>
</div>
